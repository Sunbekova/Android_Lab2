<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="32dp"
        android:background="@drawable/background_edit_text"
        >

    <ImageView
        android:id="@+id/image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/baseline_pets_24"/>



        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_name"
            android:textColor="@color/brown"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="240dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/minLifeExpantancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:background="@drawable/background_name"
                android:textStyle="bold"

                tools:text="max life: 10" />

            <TextView
                android:id="@+id/goodWithChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:background="@drawable/background_name"
                android:textStyle="bold"

                tools:text="max life: 10" />

            <TextView
                android:id="@+id/protectiveness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:background="@drawable/background_name"
                android:textStyle="bold"

                tools:text="max life: 10" />

            <TextView
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textStyle="bold"

                android:background="@drawable/background_name"

                tools:text="max life: 10" />

            <TextView
                android:id="@+id/playfulness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                tools:text="Combo" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>